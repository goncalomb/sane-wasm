{
  "name": "sane-wasm",
  "version": "0.2.0",
  "description": "A project to bring the SANE API to the web.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "clean": "npm run clean:tsc && npm run clean:sane",
    "clean:tsc": "rm -rf dist/",
    "clean:sane": "./build.sh --no-build --clean",
    "prebuild": "rm -rf dist/ build/",
    "build": "npm run build:tsc && npm run build:sane",
    "build:tsc": "tsc",
    "build:sane": "./build.sh --with-docker --clean",
    "debug:sane": "./build.sh --with-docker --debug --emrun"
  },
  "files": [
    "dist/",
    "lib/",
    "build/",
    "libsane.d.ts",
    "LICENSE-LGPL.txt",
    "LICENSE.txt"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goncalomb/sane-wasm.git"
  },
  "author": "Gon√ßalo MB <me@goncalomb.com>",
  "license": "GPL-2.0+ OR LGPL-2.1+",
  "bugs": {
    "url": "https://github.com/goncalomb/sane-wasm/issues"
  },
  "homepage": "https://github.com/goncalomb/sane-wasm#readme",
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  },
  "peerDependencies": {
    "usb": "^2.10.0"
  },
  "peerDependenciesMeta": {
    "usb": {
      "optional": true
    }
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "jest-extended": "^4.0.1",
    "typescript": "^5.2.2"
  }
}
